{% extends "ADBundle::layout.html.twig" %}


{% block title %}
    Dashboard - {{ parent() }}
{% endblock %}

{% block ad_body %}

    <div id="wrapper">
        <!-- Navigation -->

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="page-header">Edit</h3>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            {#{{ dump(users) }}#}
            <div class="row">
                <div class="col-lg-12">
                    {% if form is defined %}

                        {% if result is defined %}
                            {% if result is defined and result %}
                                {% if result == "success" %}
                                    <div class="alert alert-success" role="alert">
                                        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                                        Votre mot de passe a été modifié.
                                    </div>
                                {% else %}
                                    <div class="alert alert-danger" role="alert">
                                        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                                        {{ result }}
                                    </div>
                                {% endif %}
                            {% endif %}



                            {% if error is defined and error %}
                                <div class="alert alert-warning" role="alert" style="margin-top: 30px;">
                                    {{ error | raw }}.
                                </div>
                            {% endif %}

                        {% endif %}
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <i class="fa fa-edit"></i> Modificaiton mot de passe d'utilisateur
                                <div class="pull-right">
                                    <a href="{{ path('list_users') }}" class="btn btn-success btn-xs disabled"> <i
                                                class="fa fa-users fa-fw"></i>Listes
                                        d'utilisateurs</a>
                                </div>

                            </div>
                            <!-- /.panel-heading -->
                            <div class="panel-body">
                                <div class="alert alert-warning hide" id="field-message-error" role="alert">
                                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                                    <span class="sr-only">Error:</span>
                                    <span class="message-error"></span>
                                </div>

                                <div class="row">

                                    {{ form_start(form, { 'method': 'POST','attr': { 'role':'form'} }) }}
                                    <div class="col-lg-6">

                                        {% if form.login is defined %}
                                            <div class="form-group">
                                                {{ form_label(form.login) }}

                                                <div class="input-group">
                                                    <div class="input-group-addon"><i class="fa fa-user"></i>
                                                    </div>
                                                    {{ form_widget(form.login) }}
                                                </div>
                                            </div>

                                        {% endif %}
                                        {% if form.oldPassword is defined %}
                                            <div class="form-group has-feedback" id="champs-old-pwd">
                                                {{ form_label(form.oldPassword,"Ancien mot de passe",{ 'label_attr': {'class': 'control-label'} }) }}
                                                <div class="input-group">
                                                    <div class="input-group-addon"><i class="fa fa-unlock-alt"></i>
                                                    </div>
                                                    {{ form_widget(form.oldPassword) }}
                                                </div>
                                            </div>

                                        {% endif %}

                                        {% if form.password is defined %}
                                            <div class="form-group has-feedback" id="champs-new-pwd">
                                                {{ form_label(form.password,"Nouveau mot de passe",{ 'label_attr': {'class': 'control-label'} }) }}
                                                <div class="input-group">
                                                    <div class="input-group-addon"><i class="fa fa-unlock-alt"></i>
                                                    </div>
                                                    {{ form_widget(form.password) }}
                                                </div>
                                            </div>
                                            <div class="form-group" id="champs-check-pwd">
                                                <label for="confirm-password" class="control-label">
                                                    Confirmation Mot de passe</label>

                                                <div class="input-group has-feedback">
                                                    <div class="input-group-addon"><i class="fa fa-unlock-alt"></i>
                                                    </div>
                                                    <input type="password" placeholder="Confirmation mot de passe"
                                                           id="confirm-password"
                                                           class="form-control confirm-pwd"
                                                           name="confirm-password" autocomplete="off"
                                                           required="required"/>

                                                </div>
                                            </div>

                                        {% endif %}


                                        <!-- Change this to a button or input when using this as a form -->
                                        {#<button type="submit" href="" class="btn btn-sm btn-success btn-block">#}
                                        {#Enregistrer#}
                                        {#</button>#}


                                    </div>

                                    <div class="col-sm-12">
                                        <button type="submit" class="btn btn-sm btn-success btn-sm" id="save-edit-pwd">
                                            Enregistrer
                                        </button>
                                    </div>
                                    {{ form_end(form) }}

                                </div>
                                <!-- /.panel-body -->
                            </div>
                        </div>
                           {% else %}

                            <div class="row">
                                <div class="col-sm-10 col-sm-offset-1">

                                    <div class="alert alert-danger text-center" role="alert">
                                        <p>
                                            <span class="glyphicon glyphicon-exclamation-sign"
                                                  aria-hidden="true"></span>
                                            <span class="sr-only">Error:</span>
                                            <b>Erreur 404</b>: la page demandée n'existe pas.
                                        </p>
                                    </div>
                                </div>
                            </div>
                    {% endif %}

                </div>
                <!-- /.row -->
            </div>
            <!-- /#page-wrapper -->

        </div>
        <!-- /#wrapper -->
    </div>
{% endblock %}
