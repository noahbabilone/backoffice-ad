{% extends "::base.html.twig" %}

   

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <h1>AD.<span class="text-danger">42</span><span class="text-primary">Mediatvcom</span></h1>
            </div>
            <div class="col-md-8 col-md-offset-2">
                <div class="login-panel panel panel-default" style="margin-top: 10px;">
                    <div class="panel-heading">
                        <h2 class="panel-title">
                            <i class="fa fa-edit"></i> Modification mot de passe de l'utilisateur</h2>
                    </div>
                    <div class="panel-body">
                        {% if form is defined %}
                            {% if result is defined %}
                                {% if result is defined and result %}
                                    {% if result == "success" %}
                                        <div class="alert alert-success" role="alert">
                                            <span class="glyphicon glyphicon-exclamation-sign"
                                                  aria-hidden="true"></span>
                                            Votre mot de passe a été modifié.
                                        </div>
                                    {% else %}
                                        <div class="alert alert-danger" role="alert">
                                            <span class="glyphicon glyphicon-exclamation-sign"
                                                  aria-hidden="true"></span>
                                            {{ result }}
                                        </div>
                                    {% endif %}
                                {% endif %}

                                {% if error is defined and error %}
                                    <div class="alert alert-warning" role="alert" style="margin-top: 30px;">
                                        {{ error | raw }}.
                                    </div>
                                {% endif %}
                            {% endif %}


                            <div class="alert alert-warning hide" id="field-message-error" role="alert">
                                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                                <span class="sr-only">Error:</span>
                                <span class="message-error"></span>
                            </div>

                            <div class="row">

                                {{ form_start(form, { 'method': 'POST','attr': { 'role':'form'} }) }}
                                <div class="col-lg-8 col-md-offset-2">

                                    {% if form.login is defined %}
                                        <div class="form-group">
                                            {{ form_label(form.login) }}

                                            <div class="input-group">
                                                <div class="input-group-addon"><i class="fa fa-user"></i>
                                                </div>
                                                {{ form_widget(form.login) }}
                                            </div>
                                        </div>

                                    {% endif %}
                                    {% if form.oldPassword is defined %}
                                        <div class="form-group has-feedback" id="champs-old-pwd">
                                            {{ form_label(form.oldPassword,"Ancien mot de passe",{ 'label_attr': {'class': 'control-label'} }) }}
                                            <div class="input-group">
                                                <div class="input-group-addon"><i class="fa fa-unlock-alt"></i>
                                                </div>
                                                {{ form_widget(form.oldPassword) }}
                                            </div>
                                        </div>
                                    {% endif %}

                                    {% if form.password is defined %}
                                        <div class="form-group has-feedback" id="champs-new-pwd">
                                            {{ form_label(form.password,"Nouveau mot de passe",{ 'label_attr': {'class': 'control-label'} }) }}
                                            <div class="input-group">
                                                <div class="input-group-addon"><i class="fa fa-unlock-alt"></i>
                                                </div>
                                                {{ form_widget(form.password) }}
                                            </div>
                                            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                                        </div>
                                        <div class="form-group  has-feedback" id="champs-check-pwd">
                                            <label for="confirm-password" class="control-label">
                                                Confirmation Mot de passe</label>

                                            <div class="input-group ">
                                                <div class="input-group-addon"><i class="fa fa-unlock-alt"></i>
                                                </div>
                                                <input type="password" placeholder="Confirmation mot de passe"
                                                       id="confirm-password"
                                                       class="form-control confirm-pwd"
                                                       name="confirm-password" autocomplete="off" required="required"
                                                       aria-describedby="inputError2Status"/>

                                            </div>
                                            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                                        </div>
                                    {% endif %}
                                </div>


                                <div class="col-sm-8 col-md-offset-2">
                                    <div id="recaptcha" class="g-recaptcha"
                                         data-sitekey="{{ recaptcha_key_site }}"></div>
                                </div>
                                <div class="col-sm-4 col-md-offset-2" style="margin-top: 12px;">
                                    <button type="submit" class="btn btn-sm btn-success btn-block" id="save-edit-pwd">
                                        Enregistrer
                                    </button>
                                </div>
                                {{ form_end(form) }}
                            </div>
                            <!-- /.panel-body -->
                        {% else %}

                            <div class="row">
                                <div class="col-sm-10 col-sm-offset-1">

                                    <div class="alert alert-danger text-center" role="alert">
                                        <p>
                                            <span class="glyphicon glyphicon-exclamation-sign"
                                                  aria-hidden="true"></span>
                                            <span class="sr-only">Error:</span>
                                            <b>Erreur 404</b>: la page demandée n'existe pas.
                                        </p>

                                        <p> Veuillez contacter l'administrateur en cliquant
                                            <a href="mailto:rachid.dahmani@estiam.com">ICI</a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}

