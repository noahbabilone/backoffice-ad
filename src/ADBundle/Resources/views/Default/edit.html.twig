{% extends "ADBundle::layout.html.twig" %}


{% block title %}
    Dashboard - {{ parent() }}
{% endblock %}

{% block ad_body %}

    <div id="wrapper">
        <!-- Navigation -->

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="page-header">AddUser</h3>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            {#{{ dump(users) }}#}
            <div class="row">
                <div class="col-lg-12">
                    {% if result is defined %}
                        {% if result %}
                            <div class="alert alert-success" role="alert">
                                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                                <span class="sr-only">Error:</span>
                                L'utulisateur a été ajouté avec succes .
                            </div>
                        {% else %}
                            <div class="alert alert-warning" role="alert">
                                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                                <span class="sr-only">Error:</span>
                                L'utulisateur exist déjà .
                            </div>
                        {% endif %}


                        {% if error is defined and error %}
                            <div class="alert alert-warning" role="alert" style="margin-top: 30px;">
                                {{ error | raw }}.
                            </div>
                        {% endif %}

                    {% endif %}
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <i class="fa fa-user-plus fa-fw"></i> Ajout utilisateur
                            <div class="pull-right">
                                <a href="{{ path('list_users') }}" class="btn btn-success btn-xs"> <i
                                            class="fa fa-users fa-fw"></i>Liste
                                    d'utilisateurs</a>
                            </div>

                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            {% if form is defined %}
                            <div class="row">

                                {{ form_start(form, { 'method': 'POST','attr': { 'role':'form'} }) }}
                                <div class="col-lg-6">
                                    <div class="row">
                                        <div class="col-sm-6">
                                            {% if form.name is defined %}
                                                <div class="form-group">
                                                    {{ form_label(form.name) }}
                                                    <div class="input-group">
                                                        <div class="input-group-addon">
                                                            <i class="fa fa-user"></i>
                                                        </div>
                                                        {{ form_widget(form.name) }}
                                                    </div>
                                                </div>
                                            {% endif %}
                                        </div>
                                        <div class="col-sm-6">
                                            {% if form.firstName is defined %}
                                                <div class="form-group">
                                                    {{ form_label(form.firstName) }}
                                                    <div class="input-group">
                                                        <div class="input-group-addon">
                                                            <i class="fa fa-user"></i>
                                                        </div>
                                                        {{ form_widget(form.firstName) }}
                                                    </div>
                                                </div>
                                            {% endif %}
                                        </div>
                                    </div>

                                    {% if form.service is defined %}
                                        <div class="form-group">
                                            {{ form_label(form.service) }}
                                            <div class="input-group">
                                                <div class="input-group-addon"><i class="fa fa-sitemap"></i></div>
                                                {{ form_widget(form.service) }}
                                            </div>
                                        </div>
                                    {% endif %}

                                    {% if form.login is defined %}
                                        <div class="form-group">
                                            {{ form_label(form.login) }}

                                            <div class="input-group">
                                                <div class="input-group-addon"><i class="fa fa-user"></i>
                                                </div>
                                                {{ form_widget(form.login) }}
                                            </div>
                                        </div>

                                    {% endif %}
                                    {% if form.password is defined %}
                                        <div class="form-group">
                                            {{ form_label(form.password) }}
                                            <div class="input-group">
                                                <div class="input-group-addon"><i class="fa fa-unlock-alt"></i>
                                                </div>
                                                {{ form_widget(form.password) }}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="confirm-password" class="control-label">
                                                Confirmation Mot de passe</label>

                                            <div class="input-group">
                                                <div class="input-group-addon"><i class="fa fa-unlock-alt"></i>
                                                </div>
                                                <input type="password" placeholder="Confirmation mot de passe"
                                                       id="confirm-password"
                                                       class="form-control confirm-pwd"
                                                       name="confirm-password" autocomplete="off" required="required"/>
                                            </div>
                                        </div>
                                    {% endif %}


                                    <!-- Change this to a button or input when using this as a form -->
                                    {#<button type="submit" href="" class="btn btn-sm btn-success btn-block">#}
                                    {#Enregistrer#}
                                    {#</button>#}


                                </div>
                                <div class="col-lg-6">

                                    <div class="row">
                                        {% if form.street is defined %}
                                            <div class="col-lg-3">
                                                <div class="form-group">
                                                    {{ form_label(form.street) }}
                                                    <div class="input-group">
                                                        <div class="input-group-addon">
                                                            <i class="fa fa-road"></i>
                                                        </div>
                                                        {{ form_widget(form.street) }}
                                                    </div>
                                                </div>
                                            </div>
                                        {% endif %}
                                        {% if form.address is defined %}
                                            <div class="col-lg-9">
                                                <div class="form-group">
                                                    {{ form_label(form.address) }}
                                                    <div class="input-group">
                                                        <div class="input-group-addon">
                                                            <i class="fa fa-location-arrow"></i>
                                                        </div>
                                                        {{ form_widget(form.address) }}
                                                    </div>
                                                </div>
                                            </div>
                                        {% endif %}


                                        {% if form.state is defined %}
                                            <div class="col-lg-3">
                                                <div class="form-group">
                                                    {{ form_label(form.state) }}
                                                    <div class="input-group">
                                                        <div class="input-group-addon">
                                                            <i class="glyphicon glyphicon-globe"></i>
                                                        </div>
                                                        {{ form_widget(form.state) }}
                                                    </div>
                                                </div>
                                            </div>
                                        {% endif %}
                                        {% if form.city is defined %}
                                            <div class="col-lg-9">
                                                <div class="form-group">
                                                    {{ form_label(form.city) }}
                                                    <div class="input-group">
                                                        <div class="input-group-addon">
                                                            <i class="fa fa-home"></i>
                                                        </div>
                                                        {{ form_widget(form.city) }}
                                                    </div>
                                                </div>
                                            </div>
                                        {% endif %}

                                        {% if form.email is defined %}
                                            <div class="col-lg-12">
                                                {{ form_label(form.email) }}
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <div class="input-group">
                                                        <div class="input-group-addon">
                                                            <i class="fa fa-envelope"></i>
                                                        </div>
                                                        {{ form_widget(form.email) }}

                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <div class="input-group">
                                                        <div class="input-group-addon">@</div>
                                                        <select value="" class="form-control">
                                                            <option name="" id="">42consulting.fr</option>
                                                            <option name="" id="">42mtvc.fr</option>
                                                            <option name="" id="">42Consulting.lu</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>

                                        {% endif %}

                                        <div class="col-lg-12">
                                            {% if form.phone is defined %}
                                                <div class="form-group">
                                                    {{ form_label(form.phone) }}

                                                    <div class="input-group">
                                                        <div class="input-group-addon">
                                                            <i class="fa fa-phone"></i>
                                                        </div>
                                                        {{ form_widget(form.phone) }}
                                                    </div>
                                                </div>
                                            {% endif %}

                                            {% if form.office is defined %}
                                                <div class="form-group">
                                                    {{ form_label(form.office) }}
                                                    <div class="input-group">
                                                        <div class="input-group-addon"><i
                                                                    class="fa fa-graduation-cap"></i>
                                                        </div>
                                                        {{ form_widget(form.office) }}
                                                    </div>
                                                </div>
                                            {% endif %}
                                        </div>
                                    </div>

                                </div>

                                <div class="col-sm-12">
                                    <button type="submit" class="btn btn-sm btn-success btn-sm" id="save-edit">
                                        Enregistrer
                                    </button>
                                </div>
                                {{ form_end(form) }}

                                {% endif %}
                            </div>
                            <!-- /.panel-body -->
                        </div>
                    </div>
                </div>
                <!-- /.row -->
            </div>
            <!-- /#page-wrapper -->
        </div>
        <!-- /#wrapper -->
    </div>


{% endblock %}


