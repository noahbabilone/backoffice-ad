{% extends "::base.html.twig" %}

{% block body %}

    {% if form is defined %}
        <div class="container" id="login" >
            <div class="row">
                
                <div class="col-md-4 col-md-offset-4 text-center" style="margin-top: 7%; margin-bottom: 3%;">
                    <img class="logo-42" src="{{ asset("images/1.png") }}" alt="logo"/>
                </div>
                <div class="col-md-4 col-md-offset-4">

                    {% if error is defined and error %}
                        <div class="alert alert-warning" role="alert" style="margin-top: 30px;">
                            {{ error | raw }}.
                        </div>
                    {% endif %}
                    <div {% if error is defined and error %}  style="margin-top: -10px;" {% endif %} >
                        {#<div class="panel-heading">#}
                        {#&#123;&#35;<h3 class="panel-title">Veuillez vous connecter !!</h3>&#35;&#125;#}
                        {#</div>#}
                        <div class="panel-body-2">
                            {{ form_start(form, { 'method': 'POST','attr': { 'role':'form'} }) }}
                            {#<fieldset>#}
                            {% if form.login is defined %}
                                {#{{ form_label(form.login) }}#}

                                <div class="form-group">
                                    {{ form_widget(form.login) }}
                                </div>

                            {% endif %}
                            {% if form.password is defined %}
                                {#{{ form_label(form.password) }}#}

                                <div class="form-group">
                                    {{ form_widget(form.password) }}
                                </div>
                            {% endif %}

                            <div class="checkbox">
                                <label>
                                    {#<input name="remember" type="checkbox" value="Remember Me">#}
                                </label>
                            </div>
                            <!-- Change this to a button or input when using this as a form -->
                            <button type="submit" href="" class="btn btn-sm btn-danger btn-block">Connexion</button>
                            {#</fieldset>#}
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>

    {% endif %}
{% endblock %}


