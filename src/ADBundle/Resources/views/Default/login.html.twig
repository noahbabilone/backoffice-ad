{% extends "::base.html.twig" %}

{% block body %}

    {% if form is defined %}
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">

                    {% if error is defined and error %}
                        <div class="alert alert-warning" role="alert" style="margin-top: 30px;">
                            {{ error | raw }}.
                        </div>
                    {% endif %}
                    <div class="login-panel panel panel-default"
                            {% if error is defined and error %}
                                style="margin-top: -10px;"
                            {% endif %}
                            >
                        <div class="panel-heading">
                            <h3 class="panel-title">Veuillez vous connecter !!</h3>
                        </div>
                        <div class="panel-body">
                            {{ form_start(form, { 'method': 'POST','attr': { 'role':'form'} }) }}
                            <fieldset>
                                {% if form.login is defined %}
                                    <div class="form-group">
                                        {{ form_widget(form.login) }}
                                    </div>

                                {% endif %}
                                {% if form.password is defined %}
                                    <div class="form-group">
                                        {{ form_widget(form.password) }}
                                    </div>
                                {% endif %}

                                <div class="checkbox">
                                    <label>
                                        <input name="remember" type="checkbox" value="Remember Me">Se souvenir de moi.
                                    </label>
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
                                <button type="submit" href="" class="btn btn-sm btn-success btn-block">Login</button>
                            </fieldset>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>

    {% endif %}
{% endblock %}


